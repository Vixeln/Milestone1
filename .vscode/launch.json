{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
                {
                    "name": "OTHER_VALUE",
                    "value": "Something something"
                }
            ],
            // "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Aaron Release",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Compile Release Sequence", // this is referencing to the tasks.json name "
            "cwd": "${cwd}",
            "program": "${cwd}/build/milestone1", // The 'Test' program/executable name comes from the CMakeLists.txt
            "MIMode": "lldb"
        },
    ],
}